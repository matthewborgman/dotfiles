#!/usr/bin/env bash

# Define Invision-related aliases
if [ -d "$INVISION_PATH" ]; then

	alias inv='cd /d/projects/invision'
	alias invbo='cd /d/projects/invision-billingoperations'
	alias invc='cd /d/projects/invision-core'
	alias invcc='cd /d/projects/invision-customercare'
	alias invd='cd /d/projects/invision-documentation'
	alias inve2e='cd /d/projects/invision-e2e'
	alias invr='cd /d/projects/invision-reporting'
	alias invsec='cd /d/projects/invision-security'
	alias invstu='cd /d/projects/invision-studio'
	alias invui='cd /d/projects/invision-ui'
fi

# Detect which `ls` flavor is in use: GNU `ls` or macOS `ls`
if ls --color > /dev/null 2>&1; then

	export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

	COLOR_FLAG="--color"
else

	COLOR_FLAG="-G"
fi

# Define CLI-, Git-, and NPM-related aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'
alias -- -='cd -'
alias catn='cat -n'
alias df='df -h'
alias ebrc="atom ${HOME}/.bash_profile"
alias gbl='git branch -l'
alias gcd="git checkout ${DEVELOPMENT_BRANCH_NAME}"
alias gcf='git clean -f'
alias gcp='git checkout -'
alias gd='git diff'
alias gg='gl --decorate --oneline --graph --date-order --all'
alias gl='git log'
alias gmd="git merge --commit --log --no-ff ${DEVELOPMENT_BRANCH_NAME}"
alias gp='git pull'
alias gpo='git pull origin'
alias gr='git for-each-ref --count=5 --sort=-committerdate refs/heads/ --format="%(refname:short)"'
alias grep='grep -n --color=auto'
alias grhh='git reset --hard HEAD'
alias gs='git status'
alias gsl='git stash list'
alias gsp='git stash pop'
alias h='history'
alias lbrc=". ${HOME}/.bash_profile"
alias map='xargs -n1' # e.g. `find . -name .gitattributes | map dirname` to list all directories containing a file
alias ls="ls -ahl ${COLOR_FLAG}"
alias lst="ls -ahlt ${COLOR_FLAG}"
alias ni='npm install --loglevel error'
alias nl='npm link'
alias nrl='npm run lint'
alias nrt='npm run test'
alias ns='npm start'
alias nsd='npm run start:dev'
alias path='echo -e ${PATH//:/\\n}'
alias sudo='sudo '